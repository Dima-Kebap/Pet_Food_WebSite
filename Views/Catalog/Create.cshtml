@using pet_food.Models.ViewModels
@model FeedCreateViewModel
@{
    ViewData["Title"] = "Додання товару";
}
<div>
    <h3>Форма створення корму</h3>
    <p>Для додання заповніть наступні поля:</p>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <table>
            <tr>
                <td>Назва:</td>
                <td><input type="text" minlength="1" name="Name" required /></td>
            </tr>
            <tr>
                <td>Фірма:</td>
                <td><input type="text" minlength="1" name="Brand" required /></td>
            </tr>
            <tr>
                <td>Вага (в гр):</td>
                <td><input type="number" min="1" max="999999" name="Weight" required /></td>
            </tr>
            <tr>
                <td>Ціна:</td>
                <td><input type="number" min="0" max="999999" name="Price" required /></td>
            </tr>
            <tr>
                <td>Опис:</td>
                <td><input type="text" minlength="1" name="Description" required /></td>
            </tr>
            <tr>
                <td>Вид корму:</td>
                <td>
                <select name="FeedTypeId" required>
                    <option value="">Вид корму</option>
                        @foreach (var feedtype in Model.AllFeedTypes)
                        {
                            <option value="@feedtype.Id">@feedtype.Name</option>
                        }
                </select>
                </td>
            </tr>
            <tr>
                <td>Для:</td>
                <td>
                <select name="PetId" required>
                    <option value="">Для</option>
                        @foreach (var pet in Model.AllPets)
                        {
                            <option value="@pet.Id">@pet.Name</option>
                        }
                </select>
                </td>
            </tr>
            <tr>
                Фотографія товару(PNG, JPEG): 
                <input type="file" name="image" accept="image/png, image/jpeg" required />
            </tr>
            <tr>
                <td><input type="submit" value="Додати" /></td>
            </tr>
        </table>
    </form>
</div>


<a asp-action="Catalog">
    <input type="submit" value="Повернутися" />
</a>
